@model UniversityManagementSystemWebApp.Models.AllocateClassroom
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Save</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <form id="signupForm" method="POST">
        <div class="container">

            <div class="row">
                <h1 class="jumbotron text-center" style="background-color: darkcyan"> University Management System</h1>
                <div class="col-md-8 col-md-offset-2">

                    <div class="panel panel-default">
                        <div class="panel-heading" style="background-color: green">
                            <h1 align="center">Allocate Class Room</h1>
                        </div>
                        <div class="panel-body" style="border-color: black">

                            <div class="col-md-10 margin-bottom">
                                <div>

                                    @using (Html.BeginForm("Save", "Classroom", FormMethod.Post, new { id = "ClassroomRegistrationForm", @class = "" }))
                                    {
                                        <table>
                                            <tr>
                                                <td>
                                                    <label>Department</label>
                                                    @*@Html.LabelFor(x => x.DepartmentId)*@
                                                </td>
                                                <td>
                                                    @Html.DropDownListFor(x => x.DepartmentId, new SelectList(ViewBag.Departments, "Value", "Text"))
                                                    @Html.ValidationMessageFor(x => x.DepartmentId)
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>
                                                    <label>Course</label>
                                                    @*@Html.LabelFor(x => x.DepartmentId)*@
                                                </td>
                                                <td>
                                                    @Html.DropDownListFor(x => x.CourseId, new SelectList(ViewBag.Courses, "Value", "Text"))
                                                    @Html.ValidationMessageFor(x => x.CourseId)
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>
                                                    <label>Room NO</label>
                                                    @*@Html.LabelFor(x => x.DepartmentId)*@
                                                </td>
                                                <td>
                                                    @Html.DropDownListFor(x => x.RoomId, new SelectList(ViewBag.Rooms, "Value", "Text"))
                                                    @Html.ValidationMessageFor(x => x.RoomId)
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>
                                                    <label>Day</label>

                                                </td>
                                                <td>
                                                    @Html.DropDownListFor(x => x.DayId, new SelectList(ViewBag.Days, "Value", "Text"))
                                                    @Html.ValidationMessageFor(x => x.DayId)
                                                </td>
                                            </tr>


                                            <tr>
                                                <td>@Html.Label("FromTime")</td>
                                                <td>
                                                    @Html.TextBoxFor(x => x.FromTime)
                                                    @Html.ValidationMessageFor(x => x.FromTime)
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>@Html.Label("ToTime")</td>
                                                <td>
                                                    @Html.TextBoxFor(x => x.ToTime)
                                                    @Html.ValidationMessageFor(x => x.ToTime)
                                                </td>
                                            </tr>


                                            <tr>
                                                <td>
                                                    <input type="submit" value="Allocate" />
                                                </td>

                                            </tr>
                                        </table>
                                    }
                                    @if (ViewBag.Message != null)
                                    {
                                        <h1>@ViewBag.Message</h1>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
</html>
